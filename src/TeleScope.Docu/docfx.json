{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "**/**.csproj"
          ],
          "exclude": [
            "**/TeleScope.MSTest.csproj",
            "**/TeleScope.Docu.csproj",
            "**/README.md"
          ],
          "src": ".."
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
    "build": {
        "content": [
            {
                "files": [
                    "api/**.yml",
                    "api/index.md"
                ]
            },
            {
                "files": [
                    "articles/**.md",
                    "articles/**/toc.yml",
                    "toc.yml",
                    "*.md"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**"
                ]
            }
        ],
        "overwrite": [
            {
                "files": [
                    "apidoc/**.md"
                ],
                "exclude": [
                    "obj/**",
                    "_site/**"
                ]
            }
        ],
        "dest": "_site",
        "globalMetadataFiles": [],
        "globalMetadata": {
            "_enableSearch": "true",
            "_appTitle": "TeleScope Documentation",
            "_appFooter": "Copyright 2020-2021 <strong>TeleScope-dotnet</strong>. Generated by <strong>DocFX</strong>.",
            "_appLogoPath": "images/logo.png",
            "_appFaviconPath": "images/favicon.png"

        },
        "fileMetadataFiles": [],
        "template": [
            "default",
            "templates/material"
        ],
        "postProcessors": [ "ExtractSearchIndex" ],
        "markdownEngineName": "markdig",
        "noLangKeyword": false,
        "keepFileLink": false,
        "cleanupCacheHistory": false,
        "disableGitFeatures": false
    }
}